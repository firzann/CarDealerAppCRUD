<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merk Mobil"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/editMerk"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/orange"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Merk Mobil"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipe Mobil"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/editTipe"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tipe Mobil"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warna Mobil"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/editWarna"
        android:fontFamily="@font/poppinsbold"
        android:layout_width="match_parent"
        android:textColor="@color/orange"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Warna Mobil"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kapasitas Mesin"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/editKapasitasMesin"
        android:fontFamily="@font/poppinsbold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/orange"
        android:text="Kapasitas Mesin"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kondisi Mobil"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/editKondisi"
        android:fontFamily="@font/poppinsbold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:layout_marginLeft="10dp"
        android:text="Kondisi Mobil"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga Mobil"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/editHarga"
        android:fontFamily="@font/poppinsbold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:layout_marginLeft="10dp"
        android:text="Harga Mobil"
        android:textSize="18sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_bg"
            android:fontFamily="@font/poppinsbold"
            android:text="UPDATE"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/round_bg"
            android:fontFamily="@font/poppinsbold"
            android:text="DELETE"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>